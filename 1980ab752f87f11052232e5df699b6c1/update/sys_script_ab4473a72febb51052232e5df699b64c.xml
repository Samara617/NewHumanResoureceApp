        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

  // Check if the Additional comments field has changed
  if (current.comments.changes()) {

    // Query all active HT tasks associated with the HR Ticket
    var taskGr = new GlideRecord('x_1022175_hr_hr_task'); // Table name
    taskGr.addQuery('parent', current.sys_id); // Reference field to the HR Ticket
    taskGr.addQuery('active', true);
    taskGr.query();

    // Iterate through the list of tasks and update the task work notes
    while (taskGr.next()) {
      taskGr.work_notes = current.comments; // Update task work note with comments from the HR Ticket
      taskGr.update();
    }
  }

})(current, previous);
]]></script>
